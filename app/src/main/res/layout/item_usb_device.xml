<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <!-- Device Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Connection Status Indicator -->
            <View
                android:id="@+id/viewStatusIndicator"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/circle_red" />

            <!-- Device Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USB Serial Device"
                    android:textColor="@color/txt_color_primary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDeviceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="VID: 0403 | PID: 6001"
                    android:textColor="@color/txt_color_secondary"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

            <!-- Connect/Disconnect Button -->
            <Button
                android:id="@+id/btnDeviceAction"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:minWidth="@dimen/_90sdp"
                android:text="Connect"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

        <!-- Keypad Info (visible when connected) -->
        <LinearLayout
            android:id="@+id/layoutKeypadInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_rounded_light"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keypad Status:"
                    android:textColor="@color/txt_color_secondary"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/txtKeypadStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:text="Waiting for CONNECT..."
                    android:textColor="@color/txt_color_primary"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutKeypadDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/txt_color_secondary"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtKeypadAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="0001"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter:"
                    android:textColor="@color/txt_color_secondary"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtCounterId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="0001"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Error Message (visible on error) -->
        <TextView
            android:id="@+id/txtErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/red_bg_light"
            android:padding="@dimen/_8sdp"
            android:text="Connection error"
            android:textColor="@color/red_color"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
