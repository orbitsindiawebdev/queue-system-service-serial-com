<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <!-- Toolbar -->
        <include
            android:id="@+id/layoutToolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Connection Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <!-- Connection Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/viewConnectionIndicator"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/circle_red" />

                    <TextView
                        android:id="@+id/txtConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:text="Disconnected"
                        android:textColor="@color/txt_color_primary"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnRefreshDevices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_36sdp"
                        android:text="Refresh"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <!-- Connected Keypads Info -->
                <TextView
                    android:id="@+id/txtConnectedKeypads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Keypads: None"
                    android:textColor="@color/txt_color_secondary"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone" />

                <!-- Device Spinner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_12ssp" />

                    <Spinner
                        android:id="@+id/spinnerDevices"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_bg" />

                </LinearLayout>

                <!-- Baud Rate and Auto-Reconnect -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baud:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_12ssp" />

                    <Spinner
                        android:id="@+id/spinnerBaudRate"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/spinner_bg" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchAutoReconnect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:checked="true" />

                </LinearLayout>

                <!-- Connect Button -->
                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:minHeight="@dimen/_40sdp"
                    android:text="Connect"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Console Output -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConsole"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toTopOf="@id/cardSendFrame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardConnectionStatus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Console Log"
                        android:textColor="@color/txt_color_primary"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnClearLog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_32sdp"
                        android:text="Clear"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_color" />

                <ScrollView
                    android:id="@+id/scrollConsole"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/txtConsoleLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1A1A1A"
                        android:fontFamily="monospace"
                        android:padding="@dimen/_8sdp"
                        android:textColor="#00FF00"
                        android:textSize="@dimen/_10ssp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Send Frame Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSendFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Frame"
                    android:textColor="@color/txt_color_primary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Addr:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/edtAddress"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="0001"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="NPW:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/edtNpw"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="000"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="Token:"
                        android:textColor="@color/txt_color_secondary"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/edtToken"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="@drawable/edit_text_bg"
                        android:hint="001"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="@dimen/_4sdp"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSendDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Send Display Frame"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
